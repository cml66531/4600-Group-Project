/**
 * The key class which is collected after entering a certain room and must be possessed to open the chest.
 */
public class Key

{
    private boolean foundKey = false;
    private Chest onChest;
    
    public Key()
    {
      this.foundKey = false;
    }

    public void use(Chest onChest)
    {
        onChest.unLock(this);
    }

    public boolean getKey()
    {
        return foundKey;
    }
    
    public void findKey()
    {
         this.foundKey = true;
    }
}
